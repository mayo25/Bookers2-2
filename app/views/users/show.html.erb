<% if flash[:notice] %>
    <div class="flash">
         <%= flash[:notice] %>
    </div>
<% end %>
<%= render 'users/userinfo', user: @user %>


<%= render 'books/newbook', book: @book %>
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました>
 <% @book.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
 <% end %>

<h1>Books</h1>
<table class="table table-hover table-inverse">
 <thead>
 <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
      <th colspan="3"></th>
 </tr>
    <% @books.each do |book| %>
    <tr>
      <%= link_to book_path(book) do %>
      <th><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %></th>
      <% end %>
      <th><%= link_to book_path(book)do %><%= book.title %></th>
      <% end %>
      <th><p><%= book.body %></p></th>
    <% end %>
    </tr>
  </thead>
 </table>