<main>
        <p id="notice">You have created book successfully.</p>

      <h2>User info</h2>>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <tbody>
  <tr>
	  <th><p>name<%= @user.name %></p></th>
	  <th><p>introduction<%= @user.introduction %></p></th>
  </tr>
</tbody>
  <% if @user.id == current_user.id %>
    <p><%= link_to "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_34840", edit_user_path(@user) %></p>
</div>
  <% end %>
</div>




<h1>NEW BOOKS</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th> <colspan="3"></th>
      <th>Title</th>
      <th>Opinion</th>

    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
    <%= link_to book_path(book) do %>
    <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>

    <% end %>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book) %></th>
      <th><%#= link_to "Edit", edit_book_path(book)%></th>
      <th><%#= link_to "Destroy" , book_path(book),method: :delete, "data-confirm" => "本当に削除しますか？" %>
</th>

    </tr>
      <% end %>


