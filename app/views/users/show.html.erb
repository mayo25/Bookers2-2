<h1>NEW BOOKS</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>




<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th> <colspan="3"></th>
      <th> <colspan="3"></th>
      <th> <colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
    <%= link_to book_path(book) do %>
    <th><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %></th>

    <% end %>

      <th><%= link_to book_path(book)do %>
      <%= book.title %></th>
      <% end %>
      <th><p><%= book.body %></p></th>
      <th></th>
      <th><%#= link_to "Edit", edit_book_path(book)%></th>
      <th><%#= link_to "Destroy" , book_path(book),method: :delete, "data-confirm" => "本当に削除しますか？" %>
</th>

    </tr>
      <% end %>


