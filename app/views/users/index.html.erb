 <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
 <% end %>
<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @book %>

<h1>Users</h1>
 <table>
   <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
   <% @users.each do |user| %>
    <tr>
    <%= link_to users_path(user) do %>
      <th> <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
    <% end %>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user) %></th>
    </tr>
    <% end %>
   </tbody>
</table>