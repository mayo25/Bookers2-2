
<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<%= render 'users/userinfo', user: @user %>

<%= render 'books/newbook', book: @book %>

<h1>Books</h1>
 <table>
    <thead>
     <tr>
       <th> <colspan="3"></th>
       <th>Title</th>
       <th>Opinion</th>
     </tr>
    </thead>
  <tbody>
     <% @books.each do |book| %>
     <tr>
      <%= link_to book_path(book) do %>
      <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
      <% end %>
      <th><%= link_to book_path(book)do %><%= book.title %></th>
      <% end %>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
     </tr>
     <% end %>
  </tbody>
</table>