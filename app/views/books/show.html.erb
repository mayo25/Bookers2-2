 <% if flash[:notice] %>
   <div class="flash">
     <%= flash[:notice] %>
   </div>
 <% end %>


<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @book %>
<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th> <colspan="3"></th>
      <th> <colspan="3"></th>
    </tr>
  </thead>
 <tbody>
  <tr>
  <%= link_to book_path(@book) do %>
  <% end %>
   <th><%= link_to user_path do %><%= @user.name %></th><% end %>
   <th><%= link_to user_path(@book.user) do %>
   <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></th>
   <th><%= link_to book_path(@book)do %><%= @book.title %></th><% end %>
   <th><%= @book.body %></th>
   <% if @book.user == current_user %>
     <th><%= link_to "Edit", edit_book_path(@book) %></th>
     <th><%= link_to "Destroy" , user_path(@book),method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
   <% else %>
   <% end %>
  </tr>
 </tbody>
</table>



